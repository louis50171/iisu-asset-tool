<?xml version="1.0" encoding="utf-8"?>
<!-- Secondary action button gradient (cyan to green) matching desktop preview button -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_preview_end">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_preview_start"
                android:endColor="@color/button_preview_end"
                android:angle="0" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</ripple>
