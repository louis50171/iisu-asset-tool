<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout - more compact with smaller icon -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/surface_variant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Game icon preview - smaller in landscape -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp">

            <ImageView
                android:id="@+id/imageGameIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners_bg"
                android:clipToOutline="true"
                tools:src="@drawable/ic_iisu_home" />

            <!-- Missing icon indicator -->
            <ImageView
                android:id="@+id/iconMissingIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_missing_icon"
                android:visibility="gone"
                app:tint="@color/accent_cyan" />

        </FrameLayout>

        <!-- Game info - single line in landscape -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textGameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Super Mario Bros. 3" />

            <!-- Asset status - all on one line in landscape -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textIconStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    tools:text="Icon: ✓" />

                <TextView
                    android:id="@+id/textHeroStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    tools:text="• Hero: ✗" />

                <TextView
                    android:id="@+id/textLogoStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    tools:text="• Logo: ✗" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action buttons - smaller in landscape -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp">

            <ImageButton
                android:id="@+id/btnGenerateIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_icons"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:contentDescription="Generate Icon"
                app:tint="@color/accent_cyan" />

            <ImageButton
                android:id="@+id/btnGenerateHero"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_hero"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:contentDescription="Generate Hero"
                android:visibility="gone"
                app:tint="@color/accent_cyan" />

            <ImageButton
                android:id="@+id/btnGenerateLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_logo"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:contentDescription="Generate Logo"
                android:visibility="gone"
                app:tint="@color/accent_magenta" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
