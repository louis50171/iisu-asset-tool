<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/theme_surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/theme_border_color"
    app:checkedIcon="@drawable/ic_check"
    app:checkedIconTint="@color/accent_cyan"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/list_item_min_height">

    <ImageView
        android:id="@+id/imageBorder"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@color/theme_card_background"
        android:contentDescription="Border preview" />

</com.google.android.material.card.MaterialCardView>
