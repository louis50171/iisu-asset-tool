<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/theme_surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/theme_border_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_md">

        <!-- Game icon preview (if exists) -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/imageGameIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corners_bg"
                android:clipToOutline="true"
                tools:src="@drawable/ic_iisu_home" />

            <!-- Missing icon indicator -->
            <ImageView
                android:id="@+id/iconMissingIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|end"
                android:src="@drawable/ic_missing_icon"
                android:visibility="gone"
                app:tint="@color/accent_cyan" />

        </FrameLayout>

        <!-- Game info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textGameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/IisuTextAppearance.GameTitle"
                tools:text="Super Mario Bros. 3" />

            <!-- Asset status indicators -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textIconStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="Icon: Missing" />

            </LinearLayout>

            <!-- Hero/Logo status indicators -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textHeroStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="Hero: Missing" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:text="â€¢"
                    android:textSize="11sp"
                    android:textColor="@color/theme_text_secondary" />

                <TextView
                    android:id="@+id/textLogoStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/theme_text_secondary"
                    tools:text="Logo: OK" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/spacing_sm">

            <ImageButton
                android:id="@+id/btnGenerateIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_icons"
                android:contentDescription="Generate Icon"
                app:tint="@color/accent_cyan" />

            <ImageButton
                android:id="@+id/btnGenerateHero"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_hero"
                android:contentDescription="Generate Hero"
                android:visibility="gone"
                app:tint="@color/accent_cyan" />

            <ImageButton
                android:id="@+id/btnGenerateLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_logo"
                android:contentDescription="Generate Logo"
                android:visibility="gone"
                app:tint="@color/accent_magenta" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
