<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Title with iiSU Page Title style -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cover_generator_title"
            style="@style/IisuTextAppearance.PageTitle" />

        <!-- Accent line under title -->
        <View
            android:id="@+id/accentLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:background="@drawable/bg_accent_line" />

        <!-- Search Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="1dp"
            app:strokeColor="@color/theme_border_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- Search Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:hint="@string/cover_search_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/button_min_height"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:textSize="@dimen/text_body" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Platform Selector -->
                <TextView
                    android:id="@+id/labelPlatform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:text="@string/icon_platform_label"
                    style="@style/IisuTextAppearance.SectionHeader" />

                <Spinner
                    android:id="@+id/spinnerPlatform"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:background="@drawable/spinner_background"
                    android:padding="@dimen/spacing_md"
                    android:popupBackground="@color/theme_surface" />

                <!-- Search Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSearch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_marginTop="@dimen/spacing_lg"
                    android:text="@string/cover_generate_button"
                    android:textSize="@dimen/text_body"
                    style="@style/IisuPrimaryButton"
                    app:backgroundTint="@null"
                    app:cornerRadius="@dimen/card_corner_radius" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_lg">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorSize="24dp"
                app:trackThickness="3dp" />

            <TextView
                android:id="@+id/textResultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_sm"
                android:textSize="@dimen/text_caption"
                android:fontFamily="@font/calsans"
                android:textColor="@color/theme_text_secondary"
                tools:text="5 results found" />

        </LinearLayout>

        <!-- Preview Card - Taller for covers -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="2dp"
            app:strokeColor="@color/theme_border_color">

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:scaleType="fitCenter"
                android:padding="@dimen/spacing_md"
                android:background="@color/theme_card_background"
                android:contentDescription="@string/cover_generator_title"
                tools:src="@android:drawable/ic_menu_gallery" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_min_height"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:text="@string/cover_save_button"
            android:textSize="@dimen/text_body"
            android:enabled="false"
            style="@style/IisuSecondaryButton"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_save"
            app:iconGravity="textStart"
            app:cornerRadius="@dimen/card_corner_radius" />

    </LinearLayout>

</ScrollView>
