<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_image_title"
            style="@style/IisuTextAppearance.PageTitle" />

        <!-- Accent line under title -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:background="@drawable/bg_accent_line" />

        <!-- Select Image Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="1dp"
            app:strokeColor="@color/theme_border_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 1: Select Your Image"
                    style="@style/IisuTextAppearance.SectionHeader"
                    android:textColor="@color/accent_cyan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="Choose any image from your device to use as the artwork."
                    android:textSize="@dimen/text_caption"
                    android:textColor="@color/theme_text_secondary" />

                <!-- Select Image Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSelectImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="@string/custom_select_image"
                    android:textSize="@dimen/text_body"
                    style="@style/IisuPrimaryButton"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_image"
                    app:iconGravity="textStart"
                    app:cornerRadius="@dimen/card_corner_radius" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Image Preview Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="2dp"
            app:strokeColor="@color/theme_border_color">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="fitCenter"
                    android:padding="@dimen/spacing_md"
                    android:background="@color/theme_card_background"
                    android:contentDescription="@string/custom_image_title"
                    tools:src="@android:drawable/ic_menu_gallery" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone" />

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Border Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="1dp"
            app:strokeColor="@color/theme_border_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:id="@+id/labelBorders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 2: Select a Border"
                    style="@style/IisuTextAppearance.SectionHeader"
                    android:textColor="@color/accent_cyan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:text="Choose a platform border to apply to your image."
                    android:textSize="@dimen/text_caption"
                    android:textColor="@color/theme_text_secondary" />

                <!-- Border Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBorders"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_border" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:cardBackgroundColor="@color/theme_surface"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:strokeWidth="1dp"
            app:strokeColor="@color/theme_border_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Step 3: Apply &amp; Save"
                    style="@style/IisuTextAppearance.SectionHeader"
                    android:textColor="@color/accent_cyan" />

                <!-- Apply Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonApply"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:text="@string/custom_apply_border"
                    android:textSize="@dimen/text_body"
                    android:enabled="false"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:strokeColor="@color/theme_border_color"
                    app:cornerRadius="@dimen/card_corner_radius" />

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/custom_save_button"
                    android:textSize="@dimen/text_body"
                    android:enabled="false"
                    style="@style/IisuSecondaryButton"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:cornerRadius="@dimen/card_corner_radius" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
